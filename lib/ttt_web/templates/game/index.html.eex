<%= if @move do %>
  <%= @move %>
<% end %>

<%= form_for @conn, Routes.game_path(@conn, :update), fn f -> %>
  <div class="form-group">
    <%= label f, "move", class: "control-label" %>
    <%= text_input f, "move", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>